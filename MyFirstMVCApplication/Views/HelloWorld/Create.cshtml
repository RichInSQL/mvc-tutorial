@model DogViewModel

<h1>Add A New Dog</h1>

<hr />

<div class="row">
    <div class="col-6">

        <div class="card">
            <div class="card-header">
                <h5>Add A New Dog</h5>
            </div>
            <div class="card-body">
                <form asp-controller="HelloWorld" asp-action="CreateDog" method="post">
                    <div class="mb-3">
                        <label class="form-label">Dog Name</label>
                        @* asp-for is going to bind this input to the object in the model *@
                        <input asp-for=Name class="form-control" type="text" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Dog Age</label>
                        @* asp-for is going to bind this input to the object in the model *@
                        <input asp-for=Age class="form-control" type="number" />
                    </div>
                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>  
                </form>
            </div>
            <div class="card-footer">
            </div>
        </div>

    </div>
</div>
