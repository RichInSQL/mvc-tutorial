@page
@model PizzaShop.Pages.PizzaModel
@{
}


<div class="text-center">
    <h1 class="display-4 text-capitalize text-black">Our great selection of Pizzas</h1>
    <h4>Choose one, or try our pizza builder! Then Order and Done!</h4>
    <h4>No need to give and of your details!</h4>
    <h4>We already know everything!</h4>
    <p class="smallText"><i>One one pizza per order</i></p>

    <div class="container">
        <div class="row">
            <div class=col-12 mb-5 mt-5>
                <div class="w-100 row makeYourOwnDiv">
                    <div class="col-4">
                        <img class="w-100" src="~/images/Pizzas/Create.png" />
                    </div>
                    <div class="col-8 align-items-center">
                        <div class="align-middle makeYourOwnText">
                            <h3 style="text-align:left;">Create your own Pizza</h3>
                            <p style="text-align:left;">Make your own Pizza with our pizza designer</p>
                            <a class="btn btn-primary" style="float:left;" asp-area="" asp-page="Forms/CustomPizza">Try Now</a>
                        </div>
                    </div>
                </div>
            </div>

            @foreach (var pizza in Model.fakePizzaDatabase)
            {
                var imagePath = "~/images/Pizzas/" + (pizza.ImageTitle + ".png");

                <div class="col-4 mt-4 mb-5">
                    <a class="mt-1" asp-area="" asp-page="Checkout/Checkout" asp-route-ImageTitle="@pizza.ImageTitle" asp-route-PizzaPrice="@pizza.FinalPrice" asp-route-PizzaName="@pizza.PizzaName">
                        <img src="@imagePath" class="w-100" asp-append-version="true" />
                    </a>
                </div>
            }

        </div>
    </div>

</div>